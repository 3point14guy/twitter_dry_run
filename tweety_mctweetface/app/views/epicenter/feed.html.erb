<h2>@<%= current_user.username %>'s Feed</h2>
<h4>Here's what your friends are saying</h4>

<div>
	<% @following_tweets.each do |tweet| %>
		<div class=’well’>
			<p><%= link_to ('@' + tweet.user.username), show_user_path(id: tweet.user_id) %></p>
			<p><%= tweet.message.html_safe %></p>
		</div>
	<% end %>
</div>

